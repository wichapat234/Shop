@{
    ViewData["Title"] = "รายการหน่วยสินค้า";
}
<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="text-center">
    <input type='button' value='เพิ่มหน่วยสินค้า' id='myButton' onClick='Add_Unit()' />
    <br>
    <br>
    <table border="1" class="center">
        <thead>
            <tr>
                <th> ชื่อหน่วย </th>
                <th> เครื่องมือ </th>
            </tr>
        </thead>
        <tbody>
            @{ if (Model != null)
                {
                    foreach (var data in Model)
                    {
                        <tr>
                            <td>@data.Name</td>
                            <td>
                                <input type='button' value='แก้ไข' id='myButton' onClick='Edit_Unit(@data.IdNoun)' />&nbsp;
                                <input type="button" name="delete" onClick='Delete_Unit(@data.IdNoun)' value="ลบ">
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>

</div>
<style>
    table {
        width: 50%;
        height: 50px;
        margin-left: auto;
        margin-right: auto;
    }
    tr {
        height: 50px;
    }

</style>




