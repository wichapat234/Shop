@{
    ViewData["Title"] = "รายการบิล";
}

<div class="text-center">
    <h1>รายการบิล</h1>
</div>

<div class="text-center">
    <input type='button' value='เพิ่มบิล' id='myButton' onClick='Add_Bill()' />
    <br>
    <br>
    <table border="1">
        <thead>
            <tr>
                <th> วันที่ </th>
                <th> หมายเลขบิล </th>
                <th> ราคาทั้งหมดก่อนลดราคา </th>
                <th> ลดราคาทั้งหมด </th>
                <th> ราคาทั้งหมดหลังลดราคา </th>
                <th> รายละเอียด </th>
            </tr>
        </thead>
        <tbody>
            @{ if (Model != null)
                {
                    foreach (var data in Model)
                    {
                        <tr>
                            <td>@data.Date.ToString("dd/MM/yyyy")</td>
                            <td>Bill-00@(data.Id_Summary)</td>
                            <td>@data.Price_Before</td>
                            <td>@data.Price_After</td>
                            <td>@data.Discount</td>
                            <td> <input type="button" name="detail" onClick='Detail_Bill(@data.Id_Summary)' value="รายละเอียด"></td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
<style>
    table {
        width: 100%;
        margin-left: auto;
        margin-right: auto;
        height: 50px;
    }

        table th {
            height: 50px;
        }
</style>