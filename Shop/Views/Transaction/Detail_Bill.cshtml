@using Shop.TransactionViewModels
@model detailBillViewModel

@{
    ViewData["Title"] = "รายการบิล";
}

<div class="text-center">
    <h1>รายการบิล</h1>
</div>

<div class="text-center">
    <br>
    <br>
    <table border="1">
        <thead>
            <tr>

                <th rowspan="2" colspan="3"> </th>
                <th>เลขบิล </th>
                <th>@Model.bill.NumberBill</th>
            </tr>
            <tr>

                <th>วันที่ </th>
                <th>@Model.bill.Date</th>
            </tr>
            <tr>
                <th colspan="5">&nbsp;</th>
            </tr>

            <tr>
                <th> สินค้า </th>
                <th> จำนวน/หน่วย </th>
                <th> ราคา/หน่วย </th>
                <th> ราคา </th>
                <th> ส่วนลด </th>
            </tr>
        </thead>
        <tbody>

            @{
                foreach (var data in Model.detail)
                {
                        <tr>
                            <td> @data.NameProduct</td>
                            <td> @data.Count / @data.NameUnit</td>
                            <td> @data.ProductPrice.ToString("0.00")</td>
                            <td> @data.totalPrice.ToString("0.00")</td>
                            <td> @data.Discount.ToString("0.00")</td>

                        </tr>
                }
            }
            <tr>
                <th colspan="5">&nbsp;</th>
            </tr>
            <tr>
                <th rowspan="3" colspan="3"> </th>
                <th>ราคารววมก่อนส่วนลด </th>
                <th>@Model.bill.PriceAfter.ToString("0.00")</th>
            </tr>
            <tr>

                <th>ส่วนลดทั้งหมด </th>
                <th>@Model.bill.TotalDiscount.ToString("0.00")</th>
            </tr>
            <tr>

                <th>ราคารวมทั้งหมด </th>
                <th>@Model.bill.PriceBefore.ToString("0.00")</th>
            </tr>

        </tbody>
    </table>
    <br>
    <center>
        <input type='button' value='กลับหน้ารายการ' id='myButton' onclick="BlackToList()" />
    </center>
    <br>
</div>
<style>
    table {
        width: 100%;
        height: 50px;
    }

        table th {
            height: 50px;
        }
</style>